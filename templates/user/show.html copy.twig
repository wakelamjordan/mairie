{{ user.email }}

<table class="table">
    <tbody>
        <tr>
            <th>
                Id
            </th>
            <td>
                {{ user.id }}
            </td>
        </tr>
        <tr>
            <th>
                Email
            </th>
            <td>
                {{ user.email }}
            </td>
        </tr>
        <tr>
            <th>
                Roles
            </th>
            <td>
                {{ user.roles ? user.roles|json_encode : '' }}
            </td>
        </tr>
        <tr>
            <th>
                Password
            </th>
            <td>
                {{ user.password }}
            </td>
        </tr>
        <tr>
            <th>
                IsVerified
            </th>
            <td>
                {{ user.isVerified ? 'Yes' : 'No' }}
            </td>
        </tr>
        <tr>
            <th>
                Lastname
            </th>
            <td>
                {{ user.lastname }}
            </td>
        </tr>
        <tr>
            <th>
                Firstname
            </th>
            <td>
                {{ user.firstname }}
            </td>
        </tr>
        <tr>
            <th>
                CreatedAt
            </th>
            <td>
                {{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}
            </td>
        </tr>
        <tr>
            <th>
                BirthAt
            </th>
            <td>
                {{ user.birthAt ? user.birthAt|date('Y-m-d') : '' }}
            </td>
        </tr>
    </tbody>
</table>

