{% extends 'base.html.twig' %}

{% block title %}
    User index
{% endblock %}

{% block body %}
    <h1>
        User index
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Roles
                </th>
                <th>
                    IsVerified
                </th>
                <th>
                    Lastname
                </th>
                <th>
                    Firstname
                </th>
                <th>
                    actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr id="te-{{ user.id }}">
                <td>
                    {{ user.email }}
                </td>
                <td>
                    {{ user.roles ? user.roles|json_encode : '' }}
                </td>
                <td>
                    {{ user.isVerified ? 'Yes' : 'No' }}
                </td>
                <td>
                    {{ user.lastname }}
                </td>
                <td>
                    {{ user.firstname }}
                </td>
    
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">
                        show
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">
                        edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">
                    no records found
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

