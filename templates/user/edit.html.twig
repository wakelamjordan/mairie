<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title" id="modalTitleId">
			{{'title_user_edit'|trans}}
		</h5>
		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
	</div>
	<div class="modal-body">
		<div
			class="container-fluid">

			{# Commence le formulaire #}
			{{ form_start(form) }}

			{# Affiche les erreurs globaux du formulaire #}
			{{ form_errors(form) }}

			{# Affiche chaque champ individuellement, avec label, widget et erreurs #}
			<div class="form-group row">
				<div class="col-12 col-lg-6">
					{{ form_row(form.email) }}
				</div>
				<div class="col-12 col-lg-6">
					{{ form_row(form.roles,{'attr':{'class':'d-flex'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<div class="col-12 col-md-6">
					{{ form_row(form.password.first) }}
				</div>
				<div class="col-12 col-md-6">
					{{ form_row(form.password.second) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_row(form.lastname) }}
			</div>

			<div class="form-group">
				{{ form_row(form.firstname) }}
			</div>

			<div class="form-group">
				{{ form_row(form.birthAt) }}
			</div>

			{# Bouton de soumission #}
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Register</button>
			</div>
			{# Termine le formulaire #}
			{{ form_end(form) }}
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
			Close
		</button>
		<button type="button" class="btn btn-primary">Save</button>
	</div>
</div>
