{# {% extends 'base.html.twig' %}
    
    
{% block body %} #}


<div class="row-cols-2">
	<div class="">
		<table class="table table-secondary">
			<tbody>
				<tr>
					<th class="table-dark">
						Email
					</th>
					<td class="text-end">
						{{ user.email }}
						{% if user.isVerified %}
							<i class="fas fa-check text-success"></i>
						{% else %}
							<i class="fas fa-xmark text-danger"></i>
						{% endif %}

					</td>
				</tr>
				<tr>
					<th class="table-dark">
						Roles
					</th>
					<td class="text-end">
						{% if 'ROLE_ADMIN' in user.roles %}
							<span class="badge text-bg-warning">
								Admin
							</span>
						{% else %}
							<span class="badge text-bg-success">
								User
							</span>
						{% endif %}
					</td>
				</tr>
				<tr>
					<th class="table-dark">
						Lastname
					</th>
					<td class="text-end">
						{{ user.lastname }}
					</td>
				</tr>
				<tr>
					<th class="table-dark">
						Firstname
					</th>
					<td class="text-end">
						{{ user.firstname }}
					</td>
				</tr>
				<tr>
					<th class="table-dark">
						CreatedAt
					</th>
					<td class="text-end">
						{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}
					</td>
				</tr>
				<tr>
					<th class="table-dark">
						BirthAt
					</th>
					<td class="text-end">
						{{ user.birthAt ? user.birthAt|date('Y-m-d') : '' }}
					</td>
				</tr>
				<tr>
					<th class="table-dark">
						<button name="" id="buttonResetAdmin" class="btn btn-primary" onclick="resetPasswordAdmin({{user.id}})" role="button">Reset password</button>
					</th>
				</tr>
			</tbody>
		</table>

		<a href="#" data-bs-dismiss="modal" class='btn btn-primary'>
			back to list
		</a>

		<a href="{{ path('app_user_edit', {'id': user.id}) }}">
			edit
		</a>

		{{ include('user/_delete_form.html.twig') }}
	</div>
</div>


{# {% endblock %} #}
