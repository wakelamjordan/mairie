<div class="container mt-5 px-2">
    <div class="mb-2 d-flex justify-content-between align-items-center">
        <div class="table-responsive w-100">
            {% include 'user/_crud_s.html.twig' %}
            <table class="table table-responsive table-borderless table-striped# table-hover text-center">
                <thead class='table-dark'>
                    <tr class="bg-light">
                        <th scope="col" width="5%">
                            <input id='selectAll' class="form-check-input" type="checkbox" onclick="toggleSelectAll()"></th>
                            <th scope="col" width="5%">
                                Email
                            </th>
                            <th scope="col" width="20%">
                                Roles
                            </th>
                            <th scope="col" width="10%">
                                Email vérifié
                            </th>
                            <th scope="col" width="20%">
                                Nom Prénom
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr id="row-{{ user.id }}" onclick="toggleCheckbox('checkBox-{{ user.id }}')">
                                <td scope="row">
                                    <input id="checkBox-{{ user.id }}" class="form-check-input" type="checkbox" value="{{ user.id }}"></td>
                                    <td>
                                        {{ user.email }}
                                    </td>
                                    <td>
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            <span class="badge badge-warning">
                                                Admin
                                            </span>
                                        {% else %}
                                            <span class="badge badge-success">
                                                User
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.isVerified %}
                                            <i class="fas fa-check text-success"></i>
                                        {% else %}
                                            <i class="fas fa-xmark text-danger"></i>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ user.firstname }}
                                        {{ user.lastname }}
                                    </td>
                                </tr>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">
                                    No records found
                                </td>
                            </tr>
                        {% endfor %}
                        <tfoot>
                            <tr>
                                <td colspan="100">
                                    {{ users|length }}
                                    profils utilisateurs.
                                </td>
                            </tr>
                        </tfoot>
                    </tbody>
                </table>
            </div>
        </div>
        
        