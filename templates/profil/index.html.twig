{% extends 'base.html.twig' %}

{% block title %}
    User index
{% endblock %}

{% block body %}
    <h1>
        User index
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Email
                </th>
                <th>
                    Roles
                </th>
                <th>
                    Password
                </th>
                <th>
                    IsVerified
                </th>
                <th>
                    Lastname
                </th>
                <th>
                    Firstname
                </th>
                <th>
                    BirthAt
                </th>
                <th>
                    CreatedAt
                </th>
                <th>
                    actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        {{ user.id }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {{ user.roles ? user.roles|json_encode : '' }}
                    </td>
                    <td>
                        {{ user.password }}
                    </td>
                    <td>
                        {{ user.isVerified ? 'Yes' : 'No' }}
                    </td>
                    <td>
                        {{ user.lastname }}
                    </td>
                    <td>
                        {{ user.firstname }}
                    </td>
                    <td>
                        {{ user.birthAt ? user.birthAt|date('Y-m-d H:i:s') : '' }}
                    </td>

                    <td>
                        {{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                    <td>
                        <a href="{{ path('app_profil', {'id': user.id}) }}">
                            show
                        </a>
                        <a href="{{ path('app_profil_edit', {'id': user.id}) }}">
                            edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">
                        no records found
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_profil_new') }}">
        Create new
    </a>
{% endblock %}
